<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/et_eventadd_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="일정 이름" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:layout_marginTop="11dp"
            android:textColor="@color/btdarkblue"
            android:textStyle="bold"
            android:text="시작:"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <LinearLayout
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="5" 
	        android:layout_marginLeft="10dp"
	        android:orientation="vertical" >
	        
	        <EditText
		        android:id="@+id/et_eventadd_start_date"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:background="@drawable/itemwhitebg"
	            android:editable="false"
	            android:focusable="false"
		        android:textSize="15dp"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:paddingBottom="5dp" >
		    </EditText>
		    
		    <View
				android:background="@drawable/grayline"
				android:layout_width="match_parent"
				android:layout_height="1dp" />
		    
	     </LinearLayout>
	     
        <LinearLayout
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="3" 
	        android:layout_marginLeft="10dp"
	        android:orientation="vertical" >
	        
	        <EditText
		        android:id="@+id/et_eventadd_start_time"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:background="@drawable/itemwhitebg"
	            android:editable="false"
	            android:focusable="false"
		        android:textSize="15dp"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:paddingBottom="5dp" >
		    </EditText>
		    
		    <View
				android:background="@drawable/grayline"
				android:layout_width="match_parent"
				android:layout_height="1dp" />
		    
	     </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:layout_marginTop="11dp"
            android:textColor="@color/btdarkblue"
            android:textStyle="bold"
            android:text="종료:"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <LinearLayout
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="5" 
	        android:layout_marginLeft="10dp"
	        android:orientation="vertical" >
	        
	        <EditText
		        android:id="@+id/et_eventadd_end_date"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:background="@drawable/itemwhitebg"
	            android:editable="false"
	            android:focusable="false"
		        android:textSize="15dp"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:paddingBottom="5dp" >
		    </EditText>
		    
		    <View
				android:background="@drawable/grayline"
				android:layout_width="match_parent"
				android:layout_height="1dp" />
		    
	     </LinearLayout>
	     
        <LinearLayout
            android:layout_width="0dp" 
            android:layout_height="wrap_content" 
            android:layout_weight="3" 
	        android:layout_marginLeft="10dp"
	        android:orientation="vertical" >
	        
	        <EditText
		        android:id="@+id/et_eventadd_end_time"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:background="@drawable/itemwhitebg"
	            android:editable="false"
	            android:focusable="false"
		        android:textSize="15dp"
		        android:paddingTop="10dp"
		        android:paddingLeft="5dp"
		        android:paddingBottom="5dp" >
		    </EditText>
		    
		    <View
				android:background="@drawable/grayline"
				android:layout_width="match_parent"
				android:layout_height="1dp" />
		    
	     </LinearLayout>
        
    </LinearLayout>
    
    <EditText
        android:id="@+id/et_eventadd_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="장소" >
    </EditText>
    
    <EditText
        android:id="@+id/et_eventadd_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="메모" >
    </EditText>

</LinearLayout>
